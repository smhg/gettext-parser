{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2015",

    // Strict mode
    "strict": true,

    // Allow javascript files
    "allowJs": true,

    // Check js files for errors
    "checkJs": false,

    // the directory sources are in
    "rootDir": "src",

    // Output d.ts files to @types
    "outDir": "lib",

    // Generate d.ts files
    "declaration": true,

    // Minify
    "pretty": false,

    // Skip lib check when compiling
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.js",
    "index.d.ts"
  ]
}
